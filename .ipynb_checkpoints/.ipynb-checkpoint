    "#in crew colomn we want directer name from discnory list in director job\n",
    "import ast   #this is a modual in which ast.literal_eval function  convert string of list into list\n",
    "ast.literal_eval\n",
    "\n",
    "\n",
    "def fetch_director(obj):\n",
    "    L = []\n",
    "    for i in ast.literal_eval(obj): \n",
    "        if i['job']=='Director':\n",
    "            L.append(i['name']) \n",
    "            break\n",
    "    return L\n"
   ]
